<!DOCTYPE html>
<html>
	<head>
		<title>Statusbook</title>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<%= link_to "Statusbook", root_path, class: "brand" %>					
					<ul class="nav pull-right">
						<li><%= link_to "All Statuses", feed_path %></li>
						<% if user_signed_in? %>
						<li><%= link_to current_user.full_name, edit_user_registration_path %> </li>
						<li> <%= link_to "Log Out", logout_path %> </li>
						<% else %>
						<li><%= link_to "Register", register_path %></li>
						<li><%= link_to "Sign In", login_path %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
		<div class="container">
			<% flash.each do |type, message| %>

			<div class="alert <%= flash_class(type) %>"> <%= message %> <button type="button" class="close" data-dismiss="alert">&times;</button></div>
			<% end %>
			<%= yield %>
		</div>
	</body>
</html>